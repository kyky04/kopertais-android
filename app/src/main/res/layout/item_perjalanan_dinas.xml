<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rizki Fauzi Rahman"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pangkat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1143039123" />

            <TextView
                android:id="@+id/tv_jabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

            <TextView
                android:id="@+id/tv_maksud_perjalanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

            <TextView
                android:id="@+id/tv_kendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

            <TextView
                android:id="@+id/tv_tempat_berangkat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

            <TextView
                android:id="@+id/tv_tujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

            <TextView
                android:id="@+id/tv_lama_perjalanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

            <TextView
                android:id="@+id/tv_lama_tanggal_keberangkatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

            <TextView
                android:id="@+id/tv_tanggal_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0854355435" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>