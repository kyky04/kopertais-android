<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uinbdg.skripsi.kopertais.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:tint="@color/biru_muda" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PEGAWAI"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_prosedur"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:theme="@style/SelectableItemBackground"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_univ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_prosedur"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_class"
                        android:tint="@color/md_white_1000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_prosedur"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="UNIVERSITAS"
                        android:textColor="@color/md_white_1000" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:theme="@style/SelectableItemBackground"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_perjalanan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/bg_gradient"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_buletin"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_mahasiswa"
                        android:tint="@color/md_white_1000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_buletin"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="PERJALANAN"
                        android:textColor="@color/md_white_1000" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_buletin"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:theme="@style/SelectableItemBackground"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_exit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_kelas"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_exit_to_app_black_24dp"
                        android:tint="@color/md_white_1000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_kelas"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="EXIT"
                        android:textColor="@color/md_white_1000" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
