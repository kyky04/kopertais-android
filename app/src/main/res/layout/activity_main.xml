<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uinbdg.skripsi.kopertais.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:title="KOPERTAIS"
            app:titleTextColor="@android:color/white"></android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_marginTop="@dimen/spacing_small"
            android:paddingRight="@dimen/spacing_medium"
            android:paddingLeft="@dimen/spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/card_prosedur"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:theme="@style/SelectableItemBackground"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_univ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8BC34A"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_prosedur"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_class"
                        android:tint="@color/md_white_1000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_prosedur"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="UNIVERSITAS"
                        android:textColor="@color/md_white_1000" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:theme="@style/SelectableItemBackground"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_perjalanan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#FFD600"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_buletin"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_mahasiswa"
                        android:tint="@color/md_white_1000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_buletin"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="PERJALANAN"
                        android:textColor="@color/md_white_1000" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:paddingRight="@dimen/spacing_medium"
            android:paddingLeft="@dimen/spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_prosedur"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:theme="@style/SelectableItemBackground"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_univ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFD600"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_tentang"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        android:tint="@color/md_white_1000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_tentang"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TENTANG"
                        android:textColor="@color/md_white_1000" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_buletin"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:theme="@style/SelectableItemBackground"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_exit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8BC34A"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_kelas"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_exit_to_app_black_24dp"
                        android:tint="@color/md_white_1000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/img_kelas"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="EXIT"
                        android:textColor="@color/md_white_1000" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</ScrollView>
